<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.w4ma.soft.tamenly.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:name="com.w4ma.soft.tamenly.MainFragments.HomeF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>


    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:background="?android:attr/windowBackground"
        android:foregroundGravity="center"
        app:ntb_active_color="@color/lightgray"
        app:layout_anchor="@+id/fragmentlayout"
        app:layout_anchorGravity="bottom|center"
        app:ntb_badge_title_color="#ffffffff"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_scaled="true"
        app:ntb_tinted="true"
        app:ntb_bg_color="#2d3436"
        app:ntb_title_mode="all"
        app:ntb_title_size="10sp"
        app:ntb_titled="true" />

</LinearLayout>
