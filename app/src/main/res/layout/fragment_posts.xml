<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.CreateandShow.TapLayout.PostsF">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/Show_profile_image"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/user" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:background="@color/lightgray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_Show_UserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:typeface="serif"
                                    android:layout_marginTop="@dimen/_9sdp"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:drawableStart="@drawable/ic_person_black_24dp"
                                    android:text="UserName"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_12sdp" />


                                <TextView
                                    android:id="@+id/txt_Post_Date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:drawableStart="@drawable/ic_watch_later_black_24dp"
                                    android:padding="@dimen/_3sdp"
                                    android:typeface="serif"
                                    android:text="Date"
                                    android:textColor="@color/lightgrayDarker"
                                    android:textSize="@dimen/_9sdp" />



                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="@dimen/_4sdp"
                                    android:background="@color/lightgray" />
                            </LinearLayout>



                        </LinearLayout>




                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#50000000"
                            android:orientation="vertical">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:id="@+id/imagePost"
                                app:riv_corner_radius="@dimen/_6sdp"
                                android:src="@drawable/gradientback"/>

                            <TextView
                                android:id="@+id/postTitleShow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#fff"
                                android:padding="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:text="Title"
                                android:typeface="serif"
                                android:textSize="@dimen/_19sdp"/>

                        </LinearLayout>


                    </RelativeLayout>
                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/BanneradViewPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        ads:adSize="FULL_BANNER"
                        ads:adUnitId="@string/banner_ad_unit_id">
                    </com.google.android.gms.ads.AdView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/Show_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableStart="@drawable/ic_monetization_on_black_24dp"
                                android:padding="@dimen/_6sdp"
                                android:text="Price"
                                android:textColor="#000"
                                android:typeface="serif"
                                android:textSize="@dimen/_16sdp" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/_4sdp"
                                android:background="@color/lightgray" />

                            <TextView
                                android:id="@+id/txtShowDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:typeface="serif"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableStart="@drawable/ic_description_black_24dp"
                                android:padding="@dimen/_6sdp"
                                android:text="Description"

                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>




                </LinearLayout>



            </android.support.v7.widget.CardView>

</ScrollView>

</FrameLayout>